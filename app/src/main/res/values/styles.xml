<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CalculatorButton.Grey">
        <item name="android:backgroundTint">#A5A5A5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalculatorButton.Orange">
        <item name="android:backgroundTint">#FF9F0A</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CalculatorButton.Dark">
        <item name="android:backgroundTint">#333333</item>
    </style>

    <style name="CalculatorButton.Dark.Wide">
        <item name="android:layout_columnSpan">2</item>
    </style>

</resources>